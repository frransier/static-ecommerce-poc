<span class="tag{{#if modifier}} tag--{{modifier}}{{/if}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} tag--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    {{#if isFilled}} tag--filled{{/if~}}
    {{#if isBordered}} tag--bordered{{/if~}}
    "
    {{~#if hoverText}} title="{{hoverText}}"{{/if~}}
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
>
    {{#> @partial-block}}
        {{{text}}}
    {{/@partial-block}}
</span>
