<div class="product-price{{#if modifier}} product-price--{{modifier}}{{/if}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} product-price--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
>
    {{#if hasMultiplePrices}}
        <span class="product-price__prefix">Fr√•n:</span>
    {{/if}}
    {{#if discountedPrice}}
        <strong class="product-price__discounted{{#if isClubPrice}} product-price__discounted--club{{/if}}">{{discountedPrice}}:-</strong>
        {{#if regularPrice}}<span class="product-price__regular product-price__regular--is-not-current">Ord. {{regularPrice}}:-</span>{{/if}}
    {{else}}
        <span class="product-price__regular">{{regularPrice}}:-</span>
    {{/if}}
</div>
