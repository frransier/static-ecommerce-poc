<header class="hero{{#if modifier}} hero--{{modifier}}{{/if}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} hero--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
    {{#if backgroundImage~}}
        data-background-image="{{backgroundImage}}"
    {{/if}}
>
    {{#if backgroundVideo}}
        {{#if backgroundVideo.isYoutube}}
            <div class="hero__background-video" data-js-background-video="{{backgroundVideo.id}}"></div>
        {{/if}}
        {{#if backgroundVideo.isVimeo}}
            <iframe class="hero__background-video" src="https://player.vimeo.com/video/{{backgroundVideo.id}}?background=1&autoplay=1&loop=1&byline=0&title=0&muted=1" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        {{/if}}
    {{/if}}
    <div class="hero__body">
        {{#if preHeading}}
            <div class="hero__pre-heading">{{preHeading}}</div>
        {{/if}}
        {{#if image}}
            <img class="hero__image" src="{{image}}">
        {{/if}}
        {{#if title}}
            <h1 class="hero__heading">{{title}}</h1>
        {{/if}}
        {{#if intro}}
            <div class="hero__intro">
                {{{intro}}}
            </div>
        {{/if}}
        {{#if showButton}}
            {{render '@button-icon--is-link' buttonIconContext merge=true~}}
        {{/if}}
    </div>
</header>
