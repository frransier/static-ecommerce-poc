<section class="section{{~#if modifier}} section--{{modifier}}{{/if~}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} section--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
>
    {{#if header}}
        <header class="section__header">
            <div class="section__header-block">
                {{#block 'slot-header-left'}}
                    {{#if header.h1}}
                        <h1 class="section__heading">
                            {{#if header.preHeadingText}}<span class="section__pre-heading-text">{{header.preHeadingText}}</span>{{/if~}}
                            {{header.h1}}
                        </h1>
                    {{/if~}}
                    {{#if header.h2}}
                        <h2 class="section__heading">
                            {{#if header.preHeadingText}}<span class="section__pre-heading-text">{{header.preHeadingText}}</span>{{/if~}}
                            {{header.h2}}
                        </h2>
                    {{/if~}}
                {{/block}}
            </div>
            {{#if (content 'slot-header-right')}}
                <div class="section__header-block">
                    {{#block 'slot-header-right'}}
                    {{/block}}
                </div>
            {{/if}}
        </header>
        {{#if meta}}<div class="section__meta">{{meta}}</div>{{/if}}
    {{/if}}

    {{#if (content 'slot-introduction')}}
        <div class="section__introduction">
            {{#block 'slot-introduction'}}
                {{!-- Note: We can't currently display this in the section example, because of the conditional slot --}}
                <p>A conditional introductory text presented in a larger font size</p>
            {{/block}}
        </div>
    {{/if}}

    {{#block 'slot-content'}}
    {{/block}}

    {{#> @partial-block}}
        {{{sectionContent}}}
    {{/@partial-block}}
</section>
