<svg class="icon{{#if modifier}} icon--{{modifier}}{{/if}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} icon--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    aria-hidden="true"
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
>
    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ path '/assets/icons/icon-sprite.svg#' }}{{icon}}"></use>
    {{#if srOnlyText}}
        <span class="hide-visually">{{srOnlyText}}</span>
    {{/if}}
</svg>
