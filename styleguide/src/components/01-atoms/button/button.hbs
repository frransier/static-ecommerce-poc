<button class="button{{#if modifier}} button--{{modifier}}{{/if}}
    {{~#if additionalModifiers}}
        {{~#each additionalModifiers}} button--{{this}}{{/each~}}
    {{/if~}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
    {{#if type}}type="{{type}}"{{/if}}
    {{#if isDisabled}} disabled{{/if}}
>
    {{#> @partial-block}}
        {{text}}
    {{/@partial-block}}
    {{#if (content 'slot-content')}}
        {{#block 'slot-content'}}
            {{text}}
        {{/block}}
    {{/if}}
</button>
