<ul class="main-menu main-menu--submenu{{#if isCurrent}} main-menu--submenu-is-visible{{/if}}
    {{~#if customClasses}}
        {{~#each customClasses}} {{this}}{{/each~}}
    {{/if~}}
    "
    aria-expanded="{{isCurrent}}"
    {{~#if customAttributes}}
        {{~#each customAttributes}}
            {{{this.attribute}}}{{#if this.value}}="{{{this.value}}}"{{/if}}
        {{/each~}}
    {{/if~}}
>
    {{#each pages}}
        <li class="main-menu__item">
            <a href="#" class="main-menu__link
                {{~#if this.pages}} main-menu__link--has-submenu{{#if this.isCurrent}} main-menu__link--submenu-is-visible{{/if}}{{/if~}}
                {{~#if this.isCurrent}} main-menu__link--is-current{{/if~}}
            ">
                {{this.title}}
            </a>
            {{#if this.pages}}
                {{ render '@main-menu--submenu' this~}}
            {{/if}}
        </li>
    {{/each}}
</ul>
